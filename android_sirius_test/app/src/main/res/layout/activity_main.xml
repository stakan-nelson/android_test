<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        tools:context=".MainActivity">

        <!-- Место для верстки -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:background="@null"
                android:contentDescription="Back"

                app:srcCompat="@drawable/back" />

            <ImageButton
                android:id="@+id/btn_other"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="215dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:contentDescription="Other"
                app:srcCompat="@drawable/menu" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="380dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_tag1"
                    android:layout_width="53dp"
                    android:layout_height="22dp"
                    android:background="@drawable/button_tag"
                    android:text="MOBA"
                    android:textColor="@color/tag_text_color"
                    android:textSize="10sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btn_tag2"
                    android:layout_width="93dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_tag"
                    android:text="MULTIPLAYER"
                    android:textColor="@color/tag_text_color"
                    android:textSize="10sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/btn_tag3"
                    android:layout_width="73dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/button_tag"
                    android:text="STRATEGY"
                    android:textColor="@color/tag_text_color"
                    android:textSize="10sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_logo"
                    android:layout_width="150dp"
                    android:layout_height="157dp"
                    android:layout_marginTop="250dp"
                    app:srcCompat="@drawable/logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="310dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sk_modernist_bold"
                        android:text="DoTA 2"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/ic_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        app:srcCompat="@drawable/stars" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="340dp"
                    android:fontFamily="@font/sk_modernist_regular"
                    android:text="70M"
                    android:textColor="@color/grey"
                    android:textSize="12sp" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="430dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/sk_modernist_regular"
            android:lineSpacingMultiplier="1.4"
            android:text="Dota 2 is a multiplayer online battle arena (MOBA) game which has two teams of five players compete to collectively destroy a large structure defended by the opposing team known as the Ancient, whilst defending their own."
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="525dp"
            android:fontFamily="@font/sk_modernist_bold"
            android:text="Review and Ratings"
            android:textColor="@color/light_grey"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="510dp"
                android:fontFamily="@font/sk_modernist_bold"
                android:text="4.9"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_score2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="520dp"
                    app:srcCompat="@drawable/stars" />

                <TextView
                    android:id="@+id/tv_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/sk_modernist_regular"
                    android:text="70M Reviews"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ic_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="620dp"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_man1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="590dp"
                    app:srcCompat="@drawable/auguste" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_man1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="590dp"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:text="Auguste Conte"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_date1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:text="February 14, 2019"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_review1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/sk_modernist_regular"
                android:lineSpacingMultiplier="1.4"
                android:text="“Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.”"
                android:textColor="@color/grey"

                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_man2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="590dp"
                    app:srcCompat="@drawable/jang" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_man2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="590dp"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:text="Jang Marcelino"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_date2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/sk_modernist_regular"
                        android:text="February 14, 2019"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_review2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/sk_modernist_regular"
                android:lineSpacingMultiplier="1.4"
                android:text="“Once you start to learn its secrets, there’s a wild and exciting variety of play here that’s unmatched, even by its peers.”"
                android:textColor="@color/grey"

                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_install"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="870dp"
            android:background="@drawable/rounded_shape"
            android:elevation="5dp"
            android:fontFamily="@font/sk_modernist_bold"

            android:text="Install"
            android:textAllCaps="false"
            android:textSize="20sp" />


    </RelativeLayout>
</ScrollView>